<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginAdmin</servlet-name>
        <servlet-class>com.froidShop.controllers.LoginAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Sign_upCustomer</servlet-name>
        <servlet-class>com.froidShop.controllers.Sign_upCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Sign_InCustomer</servlet-name>
        <servlet-class>com.froidShop.controllers.Sign_InCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Category_Controller</servlet-name>
        <servlet-class>com.froidShop.controllers.Category_Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Product_Controller</servlet-name>
        <servlet-class>com.froidShop.controllers.Product_Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProduct_Controller</servlet-name>
        <servlet-class>com.froidShop.controllers.AddProduct_Controller</servlet-class>
        <multipart-config>
            <max-file-size>5242880</max-file-size>
            <max-request-size>2121440</max-request-size>
            <file-size-threshold>524288</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>Shop_Controller</servlet-name>
        <servlet-class>com.froidShop.controllers.Shop_Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cart_Controller</servlet-name>
        <servlet-class>com.froidShop.controllers.Cart_Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminHome_Controller</servlet-name>
        <servlet-class>com.froidShop.controllers.AdminHome_Controller</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginAdmin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sign_upCustomer</servlet-name>
        <url-pattern>/inscription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sign_InCustomer</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Category_Controller</servlet-name>
        <url-pattern>/categories</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Product_Controller</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProduct_Controller</servlet-name>
        <url-pattern>/add_product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Shop_Controller</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminHome_Controller</servlet-name>
        <url-pattern>/adminHome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cart_Controller</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/assets/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>

    <welcome-file-list>
        <welcome-file>shop.jsp</welcome-file>
    </welcome-file-list>
</web-app>