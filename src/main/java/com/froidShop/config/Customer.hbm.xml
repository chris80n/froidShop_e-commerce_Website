<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.froidShop.beans.Customer" table="customers">
        <meta attribute="class-description">
            This class contains the customer detail
        </meta>

        <id name="mail" type="string">
            <column name="mail" length="50"/>
        </id>
        <property name="prenom" column="prenom" type="string" length="50"/>
        <property name="nom" column="nom" type="string" length="50"/>
        <property name="password" column="password" type="string" length="50"/>
        <property name="tel" column="tel" type="integer" length="12"/>
    </class>
</hibernate-mapping>